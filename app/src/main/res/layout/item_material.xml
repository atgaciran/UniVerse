<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- tür – dosya ismi -->
    <TextView
        android:id="@+id/item_type_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="pdf – Fizik 1 Notları"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kutulu alan: dosya / link için tıklanabilir kutu -->
    <TextView
        android:id="@+id/item_file_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dosya veya link görüntülemek için gereken kutu"
        android:padding="12dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/item_type_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>
